rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to the products collection
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Allow public read/write access to the settings collection
    match /settings/{settingId} {
        allow read, write: if true;
    }

    // Allow public read/write access to the orders collection
    match /orders/{orderId} {
        allow read, write: if true;
    }

    // Fallback for any other path - deny all access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
