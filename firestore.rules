
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to products for now.
    // In a real application, you would want to restrict write access to authenticated admins.
    match /products/{productId} {
      allow read, write: if true;
    }

    // Allow public read and write access to settings for now.
    // In a real application, you would want to restrict write access to authenticated admins.
    match /settings/{settingId} {
      allow read, write: if true;
    }
  }
}
